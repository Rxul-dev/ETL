{
  "dashboard": {
    "title": "Apache Spark - Metrics",
    "tags": ["spark", "big-data"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Active Applications",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "spark_master_apps_active",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Workers",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "spark_master_workers",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Cores Available",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "spark_master_cores_available",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Memory Available",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "spark_master_memory_available_bytes",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      },
      {
        "id": 5,
        "title": "Worker Memory Used",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "spark_worker_memory_used_bytes",
            "legendFormat": "{{worker_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Worker Cores Used",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "spark_worker_cores_used",
            "legendFormat": "{{worker_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Cores"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Executor Count",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "spark_application_executor_count",
            "legendFormat": "{{app_name}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Executors"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "Job Duration",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "spark_job_duration_seconds",
            "legendFormat": "{{job_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}

