{
  "dashboard": {
    "title": "Database - PostgreSQL Metrics",
    "tags": ["database", "postgresql"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Database Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname!~\"template.*|postgres\"}",
            "legendFormat": "{{datname}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Transactions per Second",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(pg_stat_database_xact_commit{datname!~\"template.*|postgres\"}[5m]) + rate(pg_stat_database_xact_rollback{datname!~\"template.*|postgres\"}[5m])",
            "legendFormat": "{{datname}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "TPS"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Database Size",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "pg_database_size_bytes{datname!~\"template.*|postgres\"}",
            "legendFormat": "{{datname}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Size"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Cache Hit Ratio",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(pg_stat_database_blks_hit{datname!~\"template.*|postgres\"}[5m])) / (sum(rate(pg_stat_database_blks_hit{datname!~\"template.*|postgres\"}[5m])) + sum(rate(pg_stat_database_blks_read{datname!~\"template.*|postgres\"}[5m])))",
            "legendFormat": "Cache Hit Ratio",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percentunit", "label": "Ratio", "max": 1, "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Active Queries",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "pg_stat_activity_count{state=\"active\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Dead Tuples",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16},
        "targets": [
          {
            "expr": "pg_stat_user_tables_n_dead_tup",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "Replication Lag",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "pg_replication_lag",
            "legendFormat": "Lag",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Seconds"},
          {"format": "short"}
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}

